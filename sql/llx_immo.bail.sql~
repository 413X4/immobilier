CREATE TABLE llx_immo_bails (
  rowid integer NOT NULL auto_increment PRIMARY KEY,
  fk_prop integer NOT NULL,
  fk_loc integer NOT NULL,
  fk_logement INTEGER  NOT NULL  ,
  fk_mandat INTEGER  NULL  ,
  Type VARCHAR(25)  NULL  ,
  Date_location date  NULL  ,
  Depot_garantie VARCHAR(25)  NULL  ,
  loy  double(24,8) NOT NULL DEFAULT 0,
  date_entree  datetime NOT NULL,
  date_fin_preavis  datetime NOT NULL, 
  date_fin date  NULL   ,
  montant_tot  double(24,8) NOT NULL DEFAULT 0,
  loy  double(24,8) NOT NULL DEFAULT 0,
   charges  double(24,8) NOT NULL DEFAULT 0,
  date_der_rev  datetime NOT NULL DEFAULT '2009-01-01 00:00:00',
  commentaire  text NOT NULL, 
tms timestamp NOT NULL DEFAULT CURRENT_TIMESTAMP,
entity integer NOT NULL DEFAULT 1
) ENGINE=InnoDB;
